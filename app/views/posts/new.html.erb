<!-- This is the page to make new posts -->
<h1>New Posts</h1>

<%= form_for @post, html: { multipart: true } do |f| %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>

	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<%= f.submit "Add new post!" %>
	<%= link_to "Back to the list!", posts_path %>
<% end %>