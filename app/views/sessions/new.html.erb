<!-- This is the log in screen to create a new user session -->
<h1>Log In</h1>

<%= form_for :login do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Log In' %>
  </div>

<% end %>